  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pretypeorm": "(rm ormconfig.json || :) && ts-node -r tsconfig-paths/register src/scripts/ormconfig-generate.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:generate": "npm run typeorm -- migration:generate -n",
    "typeorm:migration:run": "npm run typeorm -- migration:run",
    "test": "DEBUG=rs:* jest --testMatch \"<rootDir>/test/e2e/test/*.test.js\" --noStackTrace --runInBand",
    "test:auth": "DEBUG=rs:* TEST_MODE=auth jest --noStackTrace"
  },
  "dependencies": {
    "@nestjs/common": "8.0.1",
    "@nestjs/config": "1.0.0",
    "@nestjs/core": "8.0.1",
    "@nestjs/mapped-types": "1.0.0",
    "@nestjs/platform-express": "8.0.1",
    "@nestjs/platform-fastify": "8.0.1",
    "@nestjs/swagger": "5.0.0",
    "@nestjs/typeorm": "8.0.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "dotenv": "10.0.0",
    "fastify-swagger": "4.8.2",
    "jsonwebtoken": "8.5.1",
    "nest-winston": "1.5.0",
    "path": "0.12.7",
    "pg": "8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "7.2.0",
    "swagger-ui-express": "4.1.6",
    "typeorm": "0.2.34",
    "winston": "3.3.3",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.14.5",
    "@babel/core": "7.14.6",
    "@babel/node": "7.14.7",
    "@babel/preset-env": "7.14.7",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "8.0.1",
    "@types/bcrypt": "5.0.0",
    "@types/bcryptjs": "2.4.2",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "8.5.3",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@types/yamljs": "0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "bcryptjs": "2.4.3",
    "chai": "4.3.4",
    "debug": "4.3.2",
    "dirty-chai": "2.0.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fs": "0.0.1-security",
    "husky": "7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "11.0.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint"
    ]
  }
}
